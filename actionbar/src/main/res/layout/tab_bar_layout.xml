<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_bar_container"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/tab_bar_height"
    android:background="@color/window_bg_color">

    <LinearLayout
        android:id="@+id/tab_bar_tabs_container"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tab_bar_height"
        android:layout_marginLeft="24.0dip"
        android:layout_marginRight="24.0dip"
        android:orientation="horizontal" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/tab_bar_divider"
            android:layout_width="fill_parent"
            android:layout_height="2.0px"
            android:layout_gravity="center_vertical"
            android:background="#ffdcdcdc" />

        <ImageView
            android:id="@+id/tab_bar_selected_mask"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tab_bar_selected_mask_height"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24.0dip"
            android:layout_marginRight="24.0dip"
            android:background="@drawable/shape_tab_line_bg" />
    </FrameLayout>
</FrameLayout>